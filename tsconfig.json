{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module / target */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",

    /* Emit */
    "noEmit": false,

    /* Interop & resolution */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,

    /* Declarations (optional for apps; you can keep or remove) */
    "declaration": false,
    "declarationMap": false,

    /* Source maps */
    "sourceMap": true,

    /* Type checking / strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* JSX (not usually needed for backend) */
    "jsx": "react-jsx",

    /* Helpful to include node types */
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
